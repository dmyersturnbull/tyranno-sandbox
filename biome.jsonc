{
  "files": {
    "includes": [
      "**",
      "!!**/recipes/*.yaml",
      "!**/charts/**/templates/*.yaml",
      "!**/helm-charts/**/templates/*.yaml",
      "!**/*.svg"
    ]
  },
  "formatter": {
    "indentStyle": "space", // default is `tab`
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "lineWidth": 100
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  }
}
